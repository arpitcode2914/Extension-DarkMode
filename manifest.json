{
  "manifest_version": 3,
  "name": "Dark Mode Extension",
  "version": "1.0",
  "description": "Toggle dark mode on websites",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
